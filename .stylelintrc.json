{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-order"],
  "rules":{
    "selector-pseudo-class-no-unknown": [true,{
      "ignorePseudoClasses": [
        "/^:/",
        "export"
      ]
    }],
    "property-no-unknown": [true, {
      "ignoreProperties": ["c1"]
    }],
    "order/properties-order":[
      "display",
      "position",
      "float",
      "clear",
      "visibility",
      "overflow",
      "width",
      "height",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",
      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "border",
      "background",
      "color",
      "font",
      "font-size",
      "line-height",
      "text-decoration",
      "text-align",
      "vertical-align",
      "white-space",
      "break-word",
      "border-radius",
      "box-shadow"
    ]
  }
}